<configuration>
    <appender name="fileAppender" class="ch.qos.logback.core.FileAppender">
        <file>c:/Project_bio/Project/logs/bioMetric.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%thread] %-5level  %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="springAppender" class="ch.qos.logback.core.FileAppender">
        <file>c:/Project_bio/Project/logs/spring.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%thread] %-5level  %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.web" additivity="false" level="DEBUG">
        <appender-ref ref="springAppender" />
    </logger>

    <root level="TRACE">
        <appender-ref ref="fileAppender" />
    </root>
</configuration>